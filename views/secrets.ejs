<%- include('header.ejs') %>

<div class="container p-3 border-rounded text-bg-dark rounded-pill">
    <div class="row d-flex flex-row justify-content-between">
        <div class="d-flex col-3 p-30 m-0">
            <form class="m-0 p-0 w-100" method="get", action="/new_secret">
                <button class="btn btn-warning rounded-pill w-100">Compose New Secret</button>
            </form>
        </div>
        <div class="d-flex col-3 p-30 m-0">
            <form class="m-0 p-0 w-100" method="get" action="/sign_out">
                <button class="btn btn-danger rounded-pill w-100">Log Out</button>
            </form>
        </div>
    </div>


</div>

<div class="container d-flex flex-column align-items-center justify-content-center">
    <% for (let i = 0; i < secrets.length; i++) { %>
      <div class="secret col-3">
        <h1><%= secrets[i].text %></h1>
      </div>
    <% } %>
  </div>
<%- include('footer.ejs') %>
